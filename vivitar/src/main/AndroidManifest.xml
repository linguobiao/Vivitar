<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gzgamut.vivitar"
    android:versionCode="6"
    android:versionName="1.2.3" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".main.Welcome" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".main.SettingActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".main.UserActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".main.AboutActivity"
            android:screenOrientation="portrait" >
        </activity>

        <service
            android:name=".service.InnofitService"
            android:enabled="true" >
        </service>

        <activity
            android:name=".main.MainssActivity"
            android:label="@string/title_activity_mainss"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".main.UserDetails"
            android:label="@string/title_activity_user_details"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".main.ChartActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".main.UserDetailsTableActivity"
            android:label="@string/title_activity_user_details_table"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.gzgamut.vivitar.main.MyProfile"
            android:label="@string/title_activity_my_profile"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>